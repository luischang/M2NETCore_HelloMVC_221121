@using M2NETCore_HelloMVC.Web.Areas.Marketing.Models;
@{
    var products = ViewData["ProductList"] as List<Product>;
    var myName = ViewData["MyName"];
}

<h1>Products with ViewDATA - @myName</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Maker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>
                    <a href="@item.Url" target="_blank">@item.Title</a>
                </td>
                <td>@item.Maker</td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px" />
                </td>
            </tr>
        }
    </tbody>
</table>